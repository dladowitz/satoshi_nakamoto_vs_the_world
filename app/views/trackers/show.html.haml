%p#notice= notice

%p
  %b Name:
  = @tracker.name
%p
  %b Start date:
  = @tracker.start_date  
%p
  %b Asset one:
  = @tracker.asset_one
  %br
  Start Date: 
  = number_to_currency @crypto_asset["open"]
  %br
  Today: 
  = number_to_currency @crypto_asset["close"]
  %br
  Total Return: 
  %b 
    = number_to_percentage((@crypto_asset["close"].to_f - @crypto_asset["open"].to_f) / @crypto_asset["open"].to_f * 100)



%p
  %b Asset two:
  = @tracker.asset_two


= link_to 'Edit', edit_tracker_path(@tracker)
\|
= link_to 'Back', trackers_path
